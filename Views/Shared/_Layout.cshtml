    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid d-flex justify-content-between align-items-center px-4">

            <!-- LEFT SIDE: Logo + Nav Links -->
            <!-- LEFT SIDE: Logo Only -->
            <div class="header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Images/LOGO.png" alt="Logo" style=" border-radius:10px; margin-top: 0; padding-top: 0; height: 50px; width: 150px;" />
                </a>
            </div>
                <!-- RIGHT SIDE: Welcome + Links + Icons -->
                <div class="d-flex align-items-center ms-auto">
                    <!-- Navigation Links -->
                    <ul class="navbar-nav d-flex flex-row align-items-center me-3">
                        <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link px-2", style = "border-radius: 20px; padding: 6px 12px;" })
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")">
                            @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link px-2", style = "border-radius: 20px; padding: 6px 12px;" })
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "")">
                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link px-2", style = "border-radius: 20px; padding: 6px 12px;" })
                        </li>
                    </ul>


                    @if (!(ViewContext.RouteData.Values["action"].ToString() == "Contact" &&
           ViewContext.RouteData.Values["controller"].ToString() == "Home"))
                    {
                        <span class="me-3">
                            @if (Session["Fullname"] != null)
                            {
                                <strong> @Session["Fullname"]!</strong>
                            }

                        </span>
                    }

                    <!-- Login/Logout -->
                    @if (Session["Fullname"] == null)
                    {
                        <a href="@Url.Action("Login", "Account")" class="nav-link text-dark" title="Login">
                            <i class="fas fa-user fa-lg"></i>
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Logout", "Account")" class="nav-link text-dark" title="Logout">
                            <i class="fas fa-user fa-lg"></i>
                        </a>
                    }

                    <!-- Cart -->
                    <a href="@Url.Action("CheckOut", "Home")" class="nav-link text-dark ms-3" title="Cart">
                        <i class="fas fa-shopping-cart fa-lg"></i>
                    </a>

                </div>


            </div>
</nav>



