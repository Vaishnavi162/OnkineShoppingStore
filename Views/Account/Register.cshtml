@model OnlineShopingStore.DAL.Tbl_User

@{
    ViewBag.Title = "User Register";

}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    body {
        background: linear-gradient(120deg, #e0f7fa, #f0f4c3);
        font-family: 'Segoe UI', sans-serif;
        font-size: 1.5rem; /* Base font size further increased */
    }

    .register-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 30px;
    }

    .register-card {
        background: white;
        padding: 70px;
        border-radius: 20px;
        box-shadow: 0 10px 35px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 600px;
    }

    h2 {
        text-align: center;
        margin-bottom: 40px;
        font-weight: 800;
        font-size: 3rem;
    }

    label, .form-label {
        font-size: 1.6rem;
        font-weight: 600;
    }

    .form-control {
        font-size: 1.5rem;
        padding: 20px 22px;
    }

    .btn {
        font-size: 1.6rem;
        padding: 18px;
        font-weight: 600;
    }

    .extra-links {
        margin-top: 25px;
        text-align: center;
        font-size: 1.4rem;
    }

        .extra-links a {
            text-decoration: none;
            font-weight: 700;
        }

    .password-toggle {
        position: absolute;
        right: 20px;
        top: 52px;
        cursor: pointer;
        color: #007bff;
        font-size: 1.4rem;
        font-weight: bold;
    }

    .position-relative {
        position: relative;
    }
</style>



<div class="register-wrapper">
    <div class="register-card">
        <h2>Register</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.Fullname, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control form-control-lg", placeholder = "Full Name" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3 position-relative">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", placeholder = "Password", id = "passwordField" })
                <span class="password-toggle" onclick="togglePassword()">Show</span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">Register</button>
            </div>

            <div class="extra-links mt-3">
                Already have an account? <a href="@Url.Action("Login", "Account")">Login</a>
            </div>
        }
    </div>
</div>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById("passwordField");
        const toggle = document.querySelector(".password-toggle");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            toggle.textContent = "Hide";
        } else {
            passwordInput.type = "password";
            toggle.textContent = "Show";
        }
    }
</script>
