@{
    ViewBag.Title = "User Login";

}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #e0f7fa, #f0f4c3);
        font-family: 'Segoe UI', sans-serif;
        font-size: 1.4rem; /* Base font size further increased */
    }

    .login-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        background: white;
        padding: 70px;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 550px;
    }

    h2 {
        text-align: center;
        margin-bottom: 40px;
        font-weight: 800;
        font-size: 3rem;
    }

    .form-label {
        font-size: 1.6rem;
        font-weight: 600;
    }

    .form-control {
        font-size: 1.5rem;
        padding: 18px 20px;
    }

    .form-check-label {
        font-size: 1.4rem;
    }

    .extra-links {
        margin-top: 25px;
        text-align: center;
        font-size: 1.4rem;
        font-weight: 600;
    }

        .extra-links a {
            margin: 0 12px;
            text-decoration: none;
            font-size: 1.4rem;
        }

    .password-toggle {
        position: absolute;
        right: 20px;
        top: 52px;
        cursor: pointer;
        color: #007bff;
        font-size: 1.3rem;
        font-weight: bold;
    }

    .btn {
        font-size: 1.6rem;
        padding: 16px;
        font-weight: 600;
    }

    .position-relative {
        position: relative;
    }
</style>


<div class="login-wrapper">
    <div class="login-card">
        <h2>Login</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" name="Email" class="form-control form-control-lg" placeholder="Enter Email" required />
            </div>

            <div class="mb-3 position-relative">
                <label class="form-label">Password</label>
                <input type="password" name="Password" id="passwordField" class="form-control form-control-lg" placeholder="Enter Password" required />
                <span class="password-toggle" onclick="togglePassword()">Show</span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" />
                <label class="form-check-label" for="rememberMe">
                    Remember Me
                </label>
            </div>

            if (TempData["LoginRequired"] != null)
            {
                <div class="alert alert-warning">
                    @TempData["LoginRequired"]
                </div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>

            <div class="extra-links mt-3">
                <a href="#">Forgot Password?</a> |
                <a href="@Url.Action("Register", "Account")">Register</a>
            </div>
        }
    </div>
</div>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById("passwordField");
        const toggle = document.querySelector(".password-toggle");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            toggle.textContent = "Hide";
        } else {
            passwordInput.type = "password";
            toggle.textContent = "Show";
        }
    }
</script>